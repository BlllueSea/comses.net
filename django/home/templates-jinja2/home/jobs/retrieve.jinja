{% extends "base.jinja" %}
{% from "common.jinja" import retrieve_introduction %}

{% set perm = True %}

{% block title %}Job: {{ title }}{% endblock %}

{% block introduction %}
    {{ retrieve_introduction("Job: " + title) }}
{% endblock %}

{% block content %}

    <h6 class="text-right">{{ date_created }}</h6>
    {{ markdown(description)|safe }}
    {% if perm %}<h6><a class="btn btn-primary btn-sm" href="{{ url('home:job-update', pk=id) }}">Edit</a></h6>
    {% endif %}
    {% if perm %}<h6><a class="btn btn-danger btn-sm" href="{{ url('home:job-update', pk=id) }}">Delete</a></h6>
    {% endif %}
{% endblock %}

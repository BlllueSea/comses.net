{% extends "base.jinja" %}
{% from "common.jinja" import breadcrumb, subnav %}

{% block extra_css %}
    {{ super() }}
    <style type="text/css">
        {# FIXME: consider moving to frontend css #}
        .display_archive {
            font-family: arial, verdana;
            font-size: 1.2em;
        }

        .campaign {
            padding: 1rem;
            margin-top: 1rem;
            position: relative;
            width: 100%;
            min-width: 100%;
            max-width: 100%;
            border: #dfdfdf solid 0.1rem;
            {#line-height: 125%;#}
        }

        .campaign:hover {
            background-color: #f7f7f7;
        }

        a {
            font-weight: bold;
        }
    </style>
{% endblock %}

{% block title %}CoMSES Digests{% endblock %}

{% block introduction %}<h1>CoMSES Digest</h1>{% endblock %}

{% block content %}
    {{ breadcrumb([
    {'url': '/about/', 'text': 'About'},
    {'url': '/about/community/', 'text': 'Community'},
    {'text': 'CoMSES Digest Newsletter' }
    ])
    }}
    <div class='jumbotron'>
        <h1 class='display-5'>CoMSES Digest Newsletter</h1>
        <p class='pt-4 lead'>
            The CoMSES Digest is a quarterly newsletter with relevant CoMSES Net community news - past
            issues can be viewed below. Full Members are automatically subscribed to the newsletter,
            but you can also <a href='http://eepurl.com/b8GCUv'>sign up</a> as a basic member.
        </p>
    </div>
    <h2>Issues</h2>
    <ul class='list-group list-order'>
        {% if mailchimp_js %}
            <script>
                {{ mailchimp_js|safe }}
            </script>
        {% else %}
            <script src='{{ mailchimp_digest_archive_url }}'>
            </script>
        {% endif %}
    </ul>
{% endblock content %}

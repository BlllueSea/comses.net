{% extends "base.jinja" %}
{% from "common.jinja" import breadcrumb, subnav %}

{% block introduction %}<h1>{{ page.heading }}</h1>{% endblock %}

{% block content %}
    {{ breadcrumb(page.get_breadcrumbs()) }}
    {{ subnav(page.get_navigation_links()) }}
    <div class='jumbotron'>
        <h1 class='display-5'>{{ page.title }}</h1>
        <div class='pt-4 lead'>
            {{ page.description|markdown }}
        </div>
    </div>
    <div class='section'>
        {{ page.body|markdown }}
    </div>
{% endblock %}

{% extends "base.jinja" %}
{% from "common.jinja" import breadcrumb, subnav, submit_model_btn, search_tag_href %}

{% block title %}{{ page.title }}{% endblock %}

{% block introduction %}<h1>Resources</h1>{% endblock %}

{% block content %}
    {# FIXME: move these to db #}
    {{ breadcrumb(page.get_breadcrumbs()) }}
    {{ subnav(page.get_navigation_links()) }}
    <div class='jumbotron'>
        <h1 class='display-5'>{{ page.title }}</h1>
        <div class='pt-4 lead'>
            {{ page.description|markdown }}
        </div>
    </div>
    {% for p in platforms %}
        <h3><a target='_blank' href='{{ p.platform.url }}'>{{ p.platform.name }}</a>
            {% if p.platform.active %}
                <span class='float-right text-success'> active </span>
            {% else %}
                    <span class='float-right text-warning'> inactive</span>
            {% endif %}
        </h3>
        <div class='description'>
            <blockquote class='blockquote'>{% autoescape off %}{{ p.platform.description.rendered }}{% endautoescape %}
            </blockquote>
        </div>
        <div class='tag-list'>
            {% for tag in p.platform.tags.all() %}
                {{ search_tag_href(tag) }}
            {% endfor %}
        </div>
    {% endfor %}
{% endblock %}

{% extends "base.jinja" %}
{% from "common.jinja" import breadcrumb, subnav, submit_model_btn %}

{% block title %}{{ page.title }}{% endblock %}

{% block introduction %}<h1>Resources</h1>{% endblock %}

{% block content %}
{# FIXME: move these to db #}
{{ breadcrumb(page.get_breadcrumbs()) }}
{{ subnav(page.get_navigation_links()) }}
<div class='jumbotron'>
    <h1 class='display-5'>{{ page.title }}</h1>
    <div class='pt-4 lead'>
        {{ page.description|markdown }}
    </div>
</div>
    {# FIXME: add pagination #}
    {% for p in platforms %}
        <hr />
        <a target='_blank' href='{{ p.platform.url }}'>{{ p.platform.name }}</a>
        {% if p.platform.active %}
            <span class='text-success'><i class='fa fa-check-circle-o'></i></span>
        {% else %}
            <span class='text-danger'><i class='fa fa-flag'></i></span>
        {% endif %}
        <div class='description'>{{ p.platform.description|markdown }}</div>
        <div class='tags'>
            {% for tag in p.platform.tags.all() %}
                <a class='tag' href='/search?tag={{ tag.name }}'>{{ tag.name }}</a>
            {% endfor %}
        </div>
    {% endfor %}
{% endblock %}
{% block sidebar %}
    <div class="card-metadata">
        <div class="card-title">
            <h1>Tags</h1>
        </div>
        <div class="card-block">
            <form>
                <div class="form-group">
                    <label>Keywords</label>
                </div>
                <div class="form-group">

                </div>
            </form>
        </div>
    </div>
    {{ submit_model_btn() }}

{% endblock %}

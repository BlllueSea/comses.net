{% extends "base.jinja" %}
{% block title %}CoMSES Net Sign In{% endblock %}

{% block introduction %}
    <h1>Sign In</h1>
{% endblock %}

{% block content %}
<div class='row' style='padding-top: 20px;'>
    <div class='col'>
        <div class="alert alert-info">
            Forgot your password? <a href="{{ url('account_reset_password') }}">Request a new password</a> or
            <a href="{{ url('home:register') }}">sign up for a free CoMSES Net account</a>.
        </div>
    </div>
</div>
<div class="row">
    <div class="col">
        <h3>Welcome back</h3>
        <p>Sign in with your CoMSES Net Account</p>
        {{ form.non_field_errors() }}
        {% set has_errors=form.non_field_errors() %}
        <form id='signin-form' role="form" class="form-horizontal" method="post">
            {% csrf_token %}
            <div id='username' class='form-group {{ 'has-danger' if has_errors }}'>
                <input name='login' type='text' class='form-control' placeholder='Username or email'>
                <small class='form-text text-muted'>Enter the username or email address you used to register with this site.</small>
            </div>
            <div id='password' class='form-group {{ 'has-danger' if has_errors }}'>
                <input name='password' type='password' class='form-control' placeholder='Password'>
            </div>
            <button type="submit" class="btn btn-primary">
                <i class='fa fa-sign-in'></i> Sign In
            </button>
        </form>
    </div>
    <div class='col'>
        <h3>External Sign In</h3>
        <p>Sign in / register using an ORCID or GitHub account</p>
        <div class='btn-group-vertical'>
            <a class='btn btn-lg btn-secondary btn-social btn-github' href="{{ provider_login_url(request, 'github') }}"><i class='fa fa-github-square'></i> GitHub Sign In</a>
            <a class='btn btn-lg btn-secondary btn-social' href="{{ provider_login_url(request, 'orcid') }}">
                <img src='//orcid.org/sites/default/files/images/orcid_24x24.png'> Create or Connect your ORCID ID
            </a>
        </div>
    </div>
</div>
{% endblock content %}

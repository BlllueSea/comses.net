{% extends "base.jinja" %}

{% block title %}External Account Connections{% endblock %}

{% block introduction %}
<h1>External Account Connections</h1>
{% endblock %}

{% block content %}
{% if form.accounts %}
    <p>{% trans %}You have authorized the following external accounts: {% endtrans %}</p>

    <form method="post" action="{{ url('socialaccount_connections') }}">
        {% csrf_token %}

        {% if form.non_field_errors() %}
            <div id="errorMsg">{{ form.non_field_errors }}</div>
        {% endif %}
        <fieldset class='form-group row'>
            <div class='col-sm-10'>
                {% for base_account in form.accounts %}
                    {% with account = base_account.get_provider_account() %}
                        <div class='form-check'>
                            <label class='form-check-label' for="id_account_{{ base_account.id }}">
                                <input class='form-check-input' id="id_account_{{ base_account.id }}" type="radio" name="account" value="{{ base_account.id }}"/>
                                <span class="socialaccount_provider fa fa-{{ base_account.provider }} {{ account.get_brand().id }}"></span> {{account.get_brand().name}}
                                {{ account }}
                            </label>
                        </div>
                    {% endwith %}
                {% endfor %}
            </div>
        </fieldset>
        <div class='form-group row'>
            <div class='offset-sm-2 col-sm-10'>
                <button type="submit" class='btn btn-sm btn-primary'><span class='fa fa-trash'></span> {% trans %}Remove{% endtrans %}</button>
            </div>
        </div>
    </form>
{% else %}
    <p>{% trans %}No connected accounts. {% endtrans %}</p>
{% endif %}
<div class='well'>
    <h3>Link your CoMSES account with GitHub or ORCID</h3>
</div>
<div class='row'>
        <div class='col-sm-6'>
        <ul class="list-group">
            <li class='list-group-item'>
                <a title="github" class="btn btn-block btn-social btn-md btn-github socialaccount_provider" 
                                  href="{{ provider_login_url(request, 'github', process="connect") }}">
                    <span class='fa fa-github'></span> Link with GitHub
                </a>
            </li>
            <li class='list-group-item'>
                <a title='orcid' class='btn btn-block btn-social btn-md btn-orcid social_account_provider' href='{{ provider_login_url(request, 'orcid', process='connect') }}'>
                    <img id='orcid-id-logo' src='https://orcid.org/sites/default/files/images/orcid_24x24.png' width='24' height='24'>
                    Link with ORCID
                </a>
            </li>
        </ul>
    </div>
</div>
{% endblock %}

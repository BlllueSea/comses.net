{% extends "base.jinja" %}

{% block title %}External Account Connections{% endblock %}

{% block introduction %}
<h1>External Account Connections</h1>
{% endblock %}

{% block content %}
    <h2>Connect your CoMSES account with <a href='https://github.com'>GitHub</a> or <a href='https://orcid.org'>ORCID</a></h2>
    <hr>
    <p>
    Connecting your account with GitHub or ORCID carries additional benefits - you will have access to private GitHub
    repositories and your published models with DOIs will be automatically associated with your ORCID record.
{% if form.accounts %}
    <h3>{% trans %}Your authorized external accounts{% endtrans %}</h3>

    <form method="post" action="{{ url('socialaccount_connections') }}">
        {% csrf_token %}

        {% if form.non_field_errors() %}
            <div id="errorMsg">{{ form.non_field_errors }}</div>
        {% endif %}
        <div class='form-group row'>
            <div class='offset-sm-2 col-sm-10'>
                {% for base_account in form.accounts %}
                    {% with account = base_account.get_provider_account() %}
                        <div class='form-check'>
                            <label class='form-check-label' for="id_account_{{ base_account.id }}">
                                <input class='form-check-input' id="id_account_{{ base_account.id }}" type="radio" name="account" value="{{ base_account.id }}"/>
                                <span class="fa fa-{{ base_account.provider }} {{ account.get_brand().id }}"></span> {{account.get_brand().name}} -
                                <a target='_blank' href='{{ account.get_profile_url() }}'>{{ account }}</a>
                            </label>
                        </div>
                    {% endwith %}
                {% endfor %}
            </div>
        </div>
        <div class='form-group row'>
            <div class='offset-sm-2 col-sm-10'>
                <button type="submit" class='btn btn-sm btn-primary'><span class='fa fa-trash'></span> {% trans %}Remove{% endtrans %}</button>
            </div>
        </div>
    </form>
{% else %}
    <p>{% trans %}No connected accounts. {% endtrans %}</p>
{% endif %}
<hr>
<h3>Link your account</h3>
<div class='card'>
    <div class='card-block'>
        <ul class="list-group list-group-flush">
            <li class='list-group-item'>
                <a title="github" class="btn text-left btn-sm btn-social btn-github socialaccount_provider" 
                                  href="{{ provider_login_url(request, 'github', process="connect") }}">
                    <span class='fa fa-github'></span> Connect with GitHub
                </a>
            </li>
            <li class='list-group-item'>
                <a title='orcid' class='btn text-left btn-sm btn-social btn-orcid social_account_provider' href='{{ provider_login_url(request, 'orcid', process='connect') }}'>
                    <img id='orcid-id-logo' src='https://orcid.org/sites/default/files/images/orcid_24x24.png' width='16' height='16'>
                    Connect with ORCID
                </a>
            </li>
        </ul>
    </div>
</div>
{% endblock %}

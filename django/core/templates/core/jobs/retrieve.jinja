{% extends "sidebar_layout.jinja" %}
{% from "common.jinja" import permission_button_group, breadcrumb, embed_discourse_comments, share_card, member_profile_href %}

{% block title %}{{ title }}{% endblock %}

{% block introduction %}
    <h1>Job Postings</h1>
{% endblock %}
{% block top %}
    {{ breadcrumb([
    {'url': url('home:job-list'), 'text': 'Jobs & Appointments' },
    {'text': title }
    ]) }}
{% endblock %}

{% block content %}
    <div id="discourse-content">
        <h1>{{ title }}{% if external_url %}
            <a href="{{ external_url }}" target="_blank"><span class="fa fa-external-link"></span></a>{% endif %}
        </h1>
        <hr>
        <div class='lead'>
        {{ description|markdown }}
        </div>
    </div>
{% endblock %}

{% block sidebar %}
    <div class="card-metadata">
        <div class="card-body">
            <div class='section'>
                <b class="card-title">Submitter</b>
                <p class='card-text'> {{ member_profile_href(submitter) }}</p>
                {% if application_deadline %}
                    <b class="card-title">Application Deadline</b>
                    <p class="card-text">{{ application_deadline }}</p>
                {% endif %}
                <b class="card-title">Last Updated</b>
                <p class="card-text">{{ last_modified }}</p>
            </div>
        </div>
    </div>
    {% if has_change_perm %}
        <a href="{{ url('home:job-edit', pk=id) }}">
            <div class="btn btn-primary my-1 w-100">Edit</div>
        </a>
    {% endif %}
    {% if has_delete_perm %}
        <button type="button" class="btn btn-danger my-1 w-100" href="{{ url('home:job-detail', pk=id) }}">
            Delete
        </button>
    {% endif %}
    {{ share_card(absolute_url) }}
{% endblock %}

{% block bottom %}
    <div class="col-12">
        <h4>Comments</h4>
        <div id="discourse-comments"></div>
    </div>
{% endblock %}

{% block js %}
    {{ embed_discourse_comments(true) }}
{% endblock %}

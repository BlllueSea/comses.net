{% extends "base.jinja" %}

{% block introduction %}
    <h1>Sign Out</h1>
{% endblock %}
{% block content %}
    <p>Are you sure you want to sign out?</p>
    <form method="post">
        {{ csrf_input }}
        {% if redirect_field_value %}
            <input type="hidden" name="{{ redirect_field_name }}" value="{{ redirect_field_value }}"/>
        {% endif %}
        <button class='btn btn-primary' type="submit">Sign Out</button>
    </form>
{% endblock %}

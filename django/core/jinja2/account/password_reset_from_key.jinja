{% extends "base.jinja" %}

{% block introduction %}
<h1>{% if token_fail %}Bad token{% else %}Change password{% endif %}</h1>
{% endblock %}

{% block content %}
    {% if token_fail %}
        {% set password_reset_url=url('account_reset_password') %}
        <p>The password reset link was invalid, possibly because it has already been used.  Please request a <a href="{{ password_reset_url }}">new password reset</a>.</p>
    {% else %}
        {% if form %}
            <form method="POST" action="{{ action_url }}">
                {% include "includes/form.jinja" %}
                <button class='btn btn-primary' type="submit" name="action">Change password</button>
            </form>
        {% else %}
            <p>Your password has been changed.</p>
        {% endif %}
    {% endif %}
{% endblock %}

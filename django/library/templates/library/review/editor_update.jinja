{% extends 'base.jinja' %}
{% from 'common.jinja' import format_date %}
{% from 'library/review/includes/codebase_release.jinja' import codebase_release_name %}

{% block introduction %}
    <h1>Review of
        <a href="{{ review.codebase_release.get_absolute_url() }}" class="text-white px-0">
            {{ codebase_release_name(review.codebase_release) }}
        </a> requested by
        <a href="{{ review.submitter.get_absolute_url() }}" class="text-white px-0">{{ review.submitter.name }}</a>
        {% if review.is_complete %}
            <span class="badge badge-primary">{{ review.get_status_display() }}</span>
        {% else %}
            <span class="badge badge-warning">{{ review.get_status_display() }}</span>
        {% endif %}
    </h1>
{% endblock %}

{% block content %}
    <div id="app" data-review-slug="{{ review.slug }}" data-status-levels="{{ review.status_levels|to_json }}"
         data-status="{{ review.status }}"></div>
    {{ render_bundle('reviews', attrs='async') }}
{% endblock %}
{% block introduction %}
    <h1>Editor feedback for <a href="{{ review_feedback.invitation.review.codebase_release.share_url }}" class="text-white px-0">
        {{ review_feedback.invitation.review.codebase_release.title }}</a>
    </h1>
{% endblock %}

{% block content %}
    {{ display_reviewer_feedback(review_feedback) }}

    <h1>Editor Comments</h1>

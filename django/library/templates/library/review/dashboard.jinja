{% extends 'base.jinja' %}

{% block introduction %}
    <h1>Peer Review Dashboard</h1>
{% endblock %}

{% block content %}
    {% for review in reviews %}
        <div class="card">
            <div class="card-body">
                <h3>
                    <a href="{{ review.get_absolute_url() }}">{{ review.title }}</a>
                    {% set badge_class="badge-primary" if review.is_complete else "badge-warning" %}
                    <span class="badge {{badge_class}}">{{ review.get_status_display() }}</span>
                </h3>
            </div>
        </div>
    {% else %}
        <p>No peer reviews</p>
    {% endfor %}
{% endblock %}

{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "target": "es5",
    "sourceMap": true,
    "lib": ["es5", "es2015.core", "es2015.promise", "es2015.collection", "dom"],
    "typeRoots": [
      "./node_modules/@types/"
    ],
    "baseUrl": "./src",
    "paths": {
      "components/*": ["components/*"],
      "pages/*": ["pages/*"],
      "api/*": ["api/*"],
      "store/*": ["store/*"],
      "util/*": ["util/*"]
    }
  }
}
